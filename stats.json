body {
    font-family: Play, sans-serif;
    font-size: 14px;
    color: rgb(241, 241, 241);
    text-align: center;
    margin-top: 50px;
}

h1 {
    font-size: 40px !important;
}

h2 {
    font-size: 28px !important;
}

p {
    font-size: 24px ;
}

.background-img {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    z-index: -1;
    pointer-events: none;
}